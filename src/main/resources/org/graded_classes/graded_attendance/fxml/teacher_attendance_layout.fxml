<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.graded_classes.graded_attendance.controller.TeacherAttendance">
    <children>
      <VBox id="search" maxWidth="400.0" minWidth="300.0" stylesheets="@../css/list_view_style.css">
         <children>
            <HBox alignment="CENTER" minWidth="300.0" spacing="5.0">
               <children>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                     <image>
                        <Image url="@../icons/search.png" />
                     </image>
                  </ImageView>
                  <TextField maxWidth="1.7976931348623157E308" minWidth="150.0" onInputMethodTextChanged="#input" onKeyTyped="#input" promptText="TD No. or Name" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Button id="button-ok" alignment="CENTER_RIGHT" mnemonicParsing="false" stylesheets="@../css/nav-style.css" text="Check In">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
    </children>
</VBox>
