<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="time-table" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefWidth="600.0" spacing="10.0" style="-fx-background-color: white;"
      stylesheets="@../css/model-pane.css" xmlns="http://javafx.com/javafx/23">
    <HBox alignment="TOP_RIGHT">
        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
            <HBox.margin>
                <Insets left="8.0" right="8.0" top="8.0"/>
            </HBox.margin>
            <Image url="@../icons/cross-normal.png"/>
        </ImageView>
    </HBox>
    <Label text="Time Table"/>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
        <Button alignment="CENTER" minHeight="120.0" minWidth="120.0" mnemonicParsing="false"
                style="-fx-background-color: #720137;" text="IV &amp; V"/>
        <Button alignment="CENTER" minHeight="120.0" minWidth="120.0" mnemonicParsing="false"
                style="-fx-background-color: #2D2D2D;" text="VI"/>
        <Button alignment="CENTER" minHeight="120.0" minWidth="120.0" mnemonicParsing="false"
                style="-fx-background-color: #590054;" text="VII"/>
        <Button alignment="CENTER" minHeight="120.0" minWidth="120.0" mnemonicParsing="false"
                style="-fx-background-color: #4B2E2E;" text="VIII"/>
    </HBox>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
        <Button alignment="CENTER" minHeight="120.0" minWidth="120.0" mnemonicParsing="false"
                style="-fx-background-color: #3D2C8D;" text="IX"/>
        <Button alignment="CENTER" minHeight="120.0" minWidth="120.0" mnemonicParsing="false"
                style="-fx-background-color: #014F43;" text="X"/>
    </HBox>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
        <Button mnemonicParsing="false" text="Add"/>
        <Button mnemonicParsing="false" text="Remove"/>
    </HBox>
</VBox>
