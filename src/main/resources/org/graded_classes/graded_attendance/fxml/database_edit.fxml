<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="database_tab" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.graded_classes.graded_attendance.controller.DataBaseController">
   <children>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <ImageView fitHeight="100.0" fitWidth="300.0" preserveRatio="true" style="-fx-page-fill: transparent;" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                     <image>
                        <Image url="@../icons/my-logo.svg" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </HBox>
      <VBox id="search" maxWidth="400.0" minWidth="300.0" stylesheets="@../css/list_view_style.css">
         <children>
            <HBox alignment="CENTER" minWidth="300.0" spacing="5.0">
               <children>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                     <image>
                        <Image url="@../icons/search.png" />
                     </image>
                  </ImageView>
                  <TextField maxWidth="1.7976931348623157E308" minWidth="150.0" promptText="ED No. or Name" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </VBox>
      <VBox id="listViewHolder" alignment="CENTER" maxWidth="800.0" spacing="4.0" style="-fx-background-color: #fafafa;" stylesheets="@../css/list_view_style.css" VBox.vgrow="ALWAYS">
         <children>
            <HBox id="heading" alignment="CENTER_LEFT" maxWidth="530.0">
               <children>
                  <Label alignment="CENTER" minWidth="50.0" text="ED No." />
                  <Label alignment="CENTER" maxWidth="200.0" minWidth="200.0" text="Name" textAlignment="CENTER" />
                  <Label alignment="CENTER" minWidth="50.0" text="Class" textAlignment="CENTER" />
                  <Label alignment="CENTER" minWidth="150.0" text="Date of birth" textAlignment="CENTER" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <ListView id="customList" fx:id="list" maxWidth="530.0" VBox.vgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
      </VBox>
   </children>
</VBox>
