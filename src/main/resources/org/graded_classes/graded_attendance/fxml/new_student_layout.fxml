<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="body_new_pane" maxHeight="750.0" maxWidth="800.0" minHeight="750.0" minWidth="800.0" stylesheets="@../css/new-admission.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.graded_classes.graded_attendance.controller.AddStudent">
    <children>
        <ScrollPane id="container" maxHeight="750.0" maxWidth="760.0" minHeight="750.0" minWidth="770.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <content>
                <VBox id="formBox" spacing="10.0">
                    <children>
                        <Label text="Personal Details :">
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="20.0" />
                            </VBox.margin>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <TextField fx:id="ed_no" editable="false" prefHeight="36.0" prefWidth="132.0" promptText="ED No." />
                                <DatePicker fx:id="dob" prefHeight="36.0" prefWidth="190.0" promptText="Date of birth" />
                                <ComboBox fx:id="gender" prefWidth="138.0" promptText="Gender" />
                                <ComboBox fx:id="blood_group" prefHeight="36.0" prefWidth="157.0" promptText="Blood Group" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <TextField fx:id="first_name" promptText="First Name" />
                                <TextField fx:id="last_name" promptText="Last Name" />
                                <ComboBox fx:id="_class" prefWidth="150.0" promptText="Class" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <TextField fx:id="father_f_name" promptText="Father first Name" />
                                <TextField fx:id="father_l_name" promptText="Father last Name" />
                                <TextField fx:id="father_occ" promptText="Father's Occupation" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <TextField fx:id="mother_f_name" promptText="Mother first Name" />
                                <TextField fx:id="mother_l_name" promptText="Mother last Name" />
                                <TextField fx:id="mother_occ" promptText="Mother 's Occupation" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <TextField fx:id="aadhaar_no" prefHeight="36.0" prefWidth="283.0" promptText="Adahar No." />
                                <TextField fx:id="email_id" prefHeight="36.0" prefWidth="271.0" promptText="Email" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <TextField fx:id="g_num" prefHeight="36.0" prefWidth="185.0" promptText="Guardian Phone No." />
                                <TextField fx:id="school_n" prefHeight="36.0" prefWidth="282.0" promptText="School name" />
                                <TextField fx:id="telegram_id" prefHeight="36.0" prefWidth="157.0" promptText="Telegram user Id" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                        </HBox>
                        <Label text="Other Detail :">
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                        </Label>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <TextArea fx:id="address" prefHeight="200.0" prefWidth="200.0" promptText="Permanet Address" HBox.hgrow="ALWAYS" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <TextField fx:id="previous_ins_name" prefHeight="36.0" prefWidth="407.0" promptText="Name of Previous Institute/Tuition Ceneter " />
                                <TextField fx:id="reason_leaving" prefHeight="36.0" prefWidth="230.0" promptText="Reason for Leaving" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                        </HBox>
                        <Label text="Subjects that you want select :">
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                            <children>
                                <CheckBox mnemonicParsing="false" onAction="#onSubjectSelection" text="Physics" />
                                <CheckBox mnemonicParsing="false" onAction="#onSubjectSelection" text="Chemistry" />
                                <CheckBox mnemonicParsing="false" onAction="#onSubjectSelection" text="Biology" />
                                <CheckBox mnemonicParsing="false" onAction="#onSubjectSelection" text="Math" />
                                <CheckBox mnemonicParsing="false" onAction="#onSubjectSelection" text="English" />
                                <CheckBox mnemonicParsing="false" onAction="#onSubjectSelection" text="Hindi" />
                                <CheckBox mnemonicParsing="false" onAction="#onSubjectSelection" text="Computer" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <CheckBox mnemonicParsing="false" onAction="#onSubjectSelection" text="Accounts" />
                                <CheckBox mnemonicParsing="false" onAction="#onSubjectSelection" text="Economics" />
                                <CheckBox mnemonicParsing="false" onAction="#onSubjectSelection" text="Social Studies" />
                                <CheckBox mnemonicParsing="false" onAction="#onSubjectSelection" text="Business Studies" />
                                <CheckBox mnemonicParsing="false" onAction="#onSubjectSelection" text="Commerce" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <TextField fx:id="info_about" prefHeight="36.0" prefWidth="407.0" promptText="Who told you about graded" />
                                <TextField fx:id="suggestions" prefHeight="36.0" prefWidth="230.0" promptText="Any Request that you have" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox prefWidth="200.0">
                            <children>
                                <CheckBox fx:id="agree" mnemonicParsing="false" text="I hereby declare that all the information given above is true and correct to the best of my knowledge. All the information shared in the resume is correct, and I take full responsibility for its correctness." wrapText="true" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="TOP_RIGHT" spacing="20.0">
                            <children>
                                <Button mnemonicParsing="false" text="Cancel" />
                                <Button mnemonicParsing="false" onAction="#apply" text="Apply" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="30.0" right="30.0" top="5.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
