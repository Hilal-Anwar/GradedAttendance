          <TableColumn fx:id="six" prefWidth="75.0" text="6:00 PM" />
          <TableColumn fx:id="seven" prefWidth="75.0" text="7:00 PM" />
          <TableColumn fx:id="eight" prefWidth="75.0" text="8:00 PM" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>
</AnchorPane>
